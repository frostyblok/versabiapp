<div class="main">
	<div class="password">
		<div class="container">
			<div class="password-content col col-sm-12 col-lg-7 m-auto space-bottom-3">

				<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= f.error_notification %>

					<h2 class="form-title mb-3">Forgot your password?</h2>
					<div class="form-inputs">
						<%= f.input :email,
												required: true,
												label: false,
												placeholder: 'Email',
												autofocus: true,
												input_html: { autocomplete: "email" } %>
					</div>

					<div class="form-actions mb-3">
						<%= f.button :submit, "Send me reset password instructions", class: 'form-submit'%>
					</div>
				<% end %>

				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
