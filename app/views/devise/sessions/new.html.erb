<div class="main">
	<div class="login">
		<div class="container">
			<div class="signup-content col col-sm-12 col-lg-7 m-auto space-bottom-3">

				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<%= f.error_notification %>
					<h2 class="form-title mb-3">Log In</h2>
					<%= f.input :email, label:false, placeholder:"Email", required: true, autofocus: true, input_html: { autocomplete: "email" } %>
					<%= f.input :password, label:false, placeholder:"Password", required: true %>
					<%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>

					<div class="form-actions mb-3">
						<%= f.button :submit, "Log in", class:'form-submit' %>
						<%#= link_to "Sign Up - It's Free!", new_user_registration_path, class:"btn" %>
					</div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
</div>
</div>
